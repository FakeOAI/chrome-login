{
  "manifest_version": 3,
  "name": "fakeoai-chrome-helper",
  "version": "1.0",
  "permissions": [
    "tabs",
    "webRequest",
    "storage",
    "cookies"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_title": "点击打开 FakeOAI Helper"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://token.fakeoai.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}